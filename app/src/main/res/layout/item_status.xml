<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sts_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="12dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#26E229"
        app:civ_border_overlay="true"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/status_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/status_image"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="?attr/textColor"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_username"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="6dp"
        android:layout_toEndOf="@id/status_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Hiiii....."
        android:textColor="?attr/subtextcolor" />


    <ImageView
        android:id="@+id/imgType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/status_image"
        android:layout_marginStart="62dp"
        android:background="#C9C5C5"
        android:orientation="horizontal" />

</RelativeLayout>